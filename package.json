{
  "name": "hospital-test",
  "version": "0.0.1",
  "description": "hospital test",
  "main": "server.js",
  "author": "",
  "license": "UNLICENSE",
  "scripts": {
    "start": "node server.js",
    "db:up": "docker-compose -f ./build/docker-compose.yml up --detach --build",
    "db:start": "docker-compose -f ./build/docker-compose.yml start",
    "db:stop": "docker-compose -f ./build/docker-compose.yml stop",
    "db:down": "docker-compose -f ./build/docker-compose.yml down",
    "migration:up": "node ./migrations/up",
    "migration:down": "node ./migrations/down",
    "seed": "node ./seeds",
    "test": "cross-env NODE_ENV=test node ./test",
    "db:test:up": "docker-compose -f ./build/docker-compose-test.yml up --detach --build",
    "db:test:down": "docker-compose -f ./build/docker-compose-test.yml down --volumes"
  },
  "dependencies": {
    "date-fns": "^2.16.1",
    "dotenv": "^8.2.0",
    "express": "^4.17.1",
    "knex": "^0.21.8",
    "pg": "^8.4.2",
    "pino": "^6.7.0",
    "pino-pretty": "^4.3.0",
    "validator": "^13.1.17"
  },
  "devDependencies": {
    "ava": "^3.13.0",
    "cross-env": "^7.0.2",
    "glob": "^7.1.6",
    "sinon": "^9.2.1",
    "supertest": "^6.0.0",
    "swagger-ui-express": "^4.1.4",
    "yamljs": "^0.3.0"
  },
  "ava": {
    "files": [
      "!*.js",
      "components/**/*.test.js",
      "libs/**/*.test.js",
      "modules/**/*.test.js"
    ],
    "verbose": true,
    "timeout": "20s",
    "failFast": true,
    "serial": true
  }
}
